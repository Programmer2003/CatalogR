@model CatalogR.Models.Collection

@section Head{
    <script src="~/lib/syncfusion/blazor/dist/js/syncfusion-blazor.min.js"></script>
}

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Collection</h4>
<hr />
<div class="row">
    <form asp-action="Edit" enctype="multipart/form-data">
        @(await Html.RenderComponentAsync<CatalogR.Views.Components.MarkdownPreview>(RenderMode.ServerPrerendered, new { Text = Model.Description }))
        <div class="row">
            <div class="col-md">
                @(await Html.RenderComponentAsync<CatalogR.Views.Components.CollectionCustomFields.CustomFields>(RenderMode.ServerPrerendered, new { Values = Model.GetCustomString(), Title = "String Fields", Field = "String" }))
            </div>
            <div class="col-md">
                @(await Html.RenderComponentAsync<CatalogR.Views.Components.CollectionCustomFields.CustomFields>(RenderMode.ServerPrerendered, new { Values = Model.GetCustomDate(), Title = "Date Fields", Field = "Date" }))
            </div>
            <div class="col-md">
                @(await Html.RenderComponentAsync<CatalogR.Views.Components.CollectionCustomFields.CustomFields>(RenderMode.ServerPrerendered, new { Values = Model.GetCustomBool(), Title = "Bool Fields", Field = "Bool" }))
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                @(await Html.RenderComponentAsync<CatalogR.Views.Components.CollectionCustomFields.CustomFields>(RenderMode.ServerPrerendered, new { Values = Model.GetCustomInt(), Title = "Int Fields", Field = "Int" }))
            </div>
            <div class="col-md">
                @(await Html.RenderComponentAsync<CatalogR.Views.Components.CollectionCustomFields.CustomFields>(RenderMode.ServerPrerendered, new { Values = Model.GetCustomText(), Title = "Text fields", Field = "Text" }))
            </div>
            <div class="col-md"></div>
        </div>
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CollectionTopicId" class="control-label"></label>
                <select asp-for="CollectionTopicId" class="form-control" asp-items="ViewBag.Topics"></select>
                <span asp-validation-for="CollectionTopicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ImageUrl" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ImageStorageName" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <base href="~/" />
    <script src="_framework/blazor.server.js"></script>
}
