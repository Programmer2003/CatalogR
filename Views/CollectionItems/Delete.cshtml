@model CatalogR.Models.Item
@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex flex-column align-items-center justitfy-content-center">
    <h3>@Localizer["Are you sure you want to delete item?"]</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Collection)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Collection!.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
            <a asp-action="Items" asp-controller="Collections" asp-route-Id="@Model.Collection?.Id">
                @Localizer["Back to List"]
            </a>
        </form>
    </div>
</div>
